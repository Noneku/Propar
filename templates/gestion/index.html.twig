{% extends 'base.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}
    <h1>Employe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ employe.matricule }}</td>
                <td>{{ employe.roles ? employe.roles|json_encode : '' }}</td>
                <td>{{ employe.nom }}</td>
                <td>{{ employe.prenom }}</td>
                <td>
                    <a href="{{ path('app_gestion_show', {'id': employe.id}) }}"> <button type="submit" class="btn btn-primary">Voir</button></a>
                    <a href="{{ path('app_gestion_edit', {'id': employe.id}) }}"> <button type="submit" class="btn btn-warning">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestion_registration_employe') }}"> <button type="submit" class="btn btn-primary mb-4 ml-2">Cr√©er Employe</button></a>
{% endblock %}
