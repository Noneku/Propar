{% extends 'base.html.twig' %}
	
{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container  position-relative cursor-pointer">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6">
            <h1 class="text-center">Inscription</h1>

            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}

            {# Bloc pour les champs personnels #}
            <div class="mb-3">
                {{ form_row(registrationForm.nom, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.prenom, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3 cursor-pointer">
                {{ form_row(registrationForm.adresse, { 'attr': {'class': 'form-control'} }) }}
            </div>
             <div id="adresse-suggestions" class="position-absolute bg-light"></div> {# Défini l'arrière-plan en blanc #}
            <div class="mb-3">
                {{ form_row(registrationForm.tel, { 'attr': {'class': 'form-control'} }) }}
            </div>

            {# Bloc pour l'adresse email #}
            <div class="mb-3">
                {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
            </div>

            {# Bloc pour le mot de passe #}
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>

            {# Bloc pour l'acceptation des termes #}
            <div class="mb-3 form-check">
                {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
                {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', { 'label_attr': {'class': 'form-check-label'} }) }}
            </div>

           

            {# Bouton de soumission #}
            <div class="text-center mb-4">
                <button type="submit" class="btn btn-primary cursor-pointer">Register</button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="{{ asset('js/address_autocomplete.js') }}"></script>
{% endblock %}


