{% extends 'base.html.twig' %}

{% block title %}Hello operationDashBoardController!{% endblock %}

{% block body %}
 <div class="container">
        <h1>Tableau de bord</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Prestation</th>
                    <th>Client</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for operation in operations %}
                    <tr>
                        <td>{{ operation.getId() }}</td>
                        <td>{{ operation.getPrestation().getNom() }}</td>
                        <td>{{ operation.getClient().getNom() }} {{ operation.getClient().getPrenom() }}</td>
                        <td>{{ operation.getDateoperation()|date('Y-m-d H:i:s')  }}</td>
                    </tr>
                    
                 {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
