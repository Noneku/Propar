{% extends 'base.html.twig' %}

{% block title %}Hello DemandeDashBoardController!{% endblock %}

{% block body %}
 <div class="container">
        <h1>Tableau de bord</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Prestation</th>
                    <th>Client</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for demande in demandes %}
                    <tr>
                        <td>{{ demande.getId() }}</td>
                        <td>{{ demande.getPrestation().getNom() }}</td>
                        <td>{{ demande.getClient().getNom() }} {{ demande.getClient().getPrenom() }}</td>
                        <td>{{ demande.getDateDemande()|date('Y-m-d H:i:s')  }}</td>
                        <td>
                            <form method="post" action="{{ path('/operation') }}">
                                <button type="submit">Accepter</button>
                            </form>
                        </td>
                    </tr>                   
                 {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
